<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.kursinis_main.fxControllers.tabs.WarehouseTabController">
    <children>
        <ListView fx:id="warehouseList" layoutX="20.0" layoutY="14.0" onMouseClicked="#loadWarehouseData" prefHeight="344.0" prefWidth="339.0" />
      <VBox layoutX="403.0" layoutY="14.0" prefHeight="143.0" prefWidth="176.0" spacing="15.0">
         <children>
              <TextField fx:id="titleWarehouseField" promptText="Title" />
              <TextField fx:id="addressWarehouseField" promptText="Address" />
            <ComboBox fx:id="managerOfWarehouseComboBox" prefHeight="25.0" prefWidth="209.0" promptText="Manager of warehouse" />
         </children>
      </VBox>
      <VBox layoutX="403.0" layoutY="200.0" prefHeight="158.0" prefWidth="84.0" spacing="15.0">
         <children>
              <Button mnemonicParsing="false" onAction="#addNewWarehouse" prefHeight="26.0" prefWidth="83.0" text="Add new" />
              <Button mnemonicParsing="false" onAction="#updateWarehouse" prefHeight="26.0" prefWidth="83.0" text="Update" />
              <Button mnemonicParsing="false" onAction="#deleteWarehouse" prefHeight="26.0" prefWidth="82.0" text="Delete" />
         </children>
      </VBox>
    </children>
</AnchorPane>
